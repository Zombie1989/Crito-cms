@inherits Umbraco.Cms.Web.Common.Views.UmbracoViewPage
@using Umbraco.Cms.Core.Models

<!-- header-section -->
<section class="header-section">
    <div class="container">
        <div class="header-info">
            <h1>@Model.Value("showcaseTitle")</h1>
            <p>@Model.Value("showcaseDescription")</p>
            <a class="btn-theme" href="@Model.Value("showcaseButtonUrl")">@Model.Value("showcaseButtonText") <i class="fa-solid fa-arrow-up-right"></i></a>
            <a class="btn-transparent" href="/service">Learn More <i class="fa-solid fa-arrow-up-right"></i></a>
        </div>

        @{
            var showcaseImage = Model.Value<MediaWithCrops>("showcaseImage");
            if (showcaseImage != null)
            {
                <img class="image" src="@showcaseImage.MediaUrl()" alt="@Model.Value("showcaseTitle")">
            }
            
        }

    </div>
</section>
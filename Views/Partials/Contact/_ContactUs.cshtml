@inherits Umbraco.Cms.Web.Common.Views.UmbracoViewPage

<section class="company-information">
    <div class="container"> 
        <div class="box-information">
            <div class="left">
                <i class="fa-sharp fa-solid fa-location-dot"></i>
            </div>
            <div class="right">
                <h1>Visit us</h1>
                <p>@Model.Value("visitUsStreetName")</p>
                <p>@Model.Value("visitUsPostalCode") @Model.Value("visitUsCityName")</p>
            </div>
        </div>
        <div class="box-information">
            <div class="left">
                <i class="fa-solid fa-phone"></i>
            </div>
            <div class="right">
                <h1>Call us</h1>
                <p>@Model.Value("callUsPhoneNumber1")</p>
                <p>@Model.Value("callUsPhoneNumber2")</p>
            </div>
        </div>
        <div class="box-information">
            <div class="left">
                <i class="fa-solid fa-envelope"></i>
            </div>
            <div class="right">
                <h1>Email us</h1>
                <p>@Model.Value("emailUsEmail1")</p>
                <p>@Model.Value("emailUsEmail2")</p>
            </div>
        </div>
    </div>
</section>
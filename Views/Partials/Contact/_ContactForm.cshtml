@using Crito.Models;
@inherits Umbraco.Cms.Web.Common.Views.UmbracoViewPage
@{
    var contactForm = new ContactForm();
}


<section class="form-section">
    <div class="container">
        <div class="form-title">
            <h1>Leave us a message for any information.</h1>
        </div>

        @using (Html.BeginUmbracoForm("Index", "Contacts", FormMethod.Post))
        {
             <div asp-validation-summary="ModelOnly"></div>

                <div class="form-text">

                    <input asp-for="@contactForm.Name" type="text" placeholder="Name*">
                    <span asp-validation-for="@contactForm.Name" class="text-danger"></span>

                    <input asp-for="@contactForm.Email" type="email" placeholder="Email*">
                    <span asp-validation-for="@contactForm.Email"class="text-danger"></span>

                    <textarea asp-for="@contactForm.Message" cols="30" rows="5" type="text" placeholder="Your Message*"></textarea>
                    <span asp-validation-for="@contactForm.Message" class="text-danger"></span>

                </div>
                <button type="submit" class="btn-theme btn">Send Message <i class="fa-solid fa-arrow-up-right"></i></button>   
        }
    </div>
</section>
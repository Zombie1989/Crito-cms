@inherits Umbraco.Cms.Web.Common.Views.UmbracoViewPage
@using Umbraco.Cms.Core.Models

<section class="about-section">
    <div class="container">
        <div class="left">
            <img class="white-line" src="/src/images/background/EWlement.svg" alt="">
            <div class="about-image">
                @{
                    var imageOfPerson = Model.Value<MediaWithCrops>("imageOfPerson");
                    if (imageOfPerson != null)
                    {
                        <img src="@imageOfPerson.MediaUrl()" alt="@Model.Value("imageofPerson")">
                    }
                }
            </div>
            <div class="border-box">
                <h3 class="title-name">@Model.Value("fullname")<span class="red-text"> @Model.Value("companyTitle")</span></h3>
                <p class="text-about">@Model.Value("textAboutPerson")</p>
            </div>
        </div>
        <div class="right">
            <p class="red-text">About Company</p>
            <h2 class="about-title">@Model.Value("titleAboutCompany")</h1>
            <p class="about-text">@Model.Value("textAboutCompany")</p>
            <div class="buttons">
                <a class="btn-theme" href="#">Learn More <i class="fa-solid fa-arrow-up-right"></i></a>
                <div>
                    <a class="btn-transparent" href="#"><i class="fa-solid fa-play"></i></a>
                    <span>Intro video</span>
                </div>

            </div>
        </div>
    </div>
</section>
@inherits Umbraco.Cms.Web.Common.Views.UmbracoViewPage<Umbraco.Cms.Core.Models.Blocks.BlockListItem>;
@using ContentModels = Umbraco.Cms.Web.Common.PublishedModels;
@{
    var content = (ContentModels.OurServices)Model.Content;
}

<a class="serv-box" href="@content.Value("ourServiceLink")">
    <p class="line"></p>
    <h3 class="box-title">@content.Value("ourServiceTitle")</h3>
    <p class="box-text">@content.Value("ourServiceDescription")</p>
    <div class="button-box">
        <p class="box-btn"><i class="fa-solid fa-arrow-right"></i></p>
    </div>                        
</a>